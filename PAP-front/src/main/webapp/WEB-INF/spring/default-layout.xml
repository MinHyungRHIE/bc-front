<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

    <definition name="layouts-tiles" template="/WEB-INF/tiles/default-layouts.jsp">
        <put-attribute name="default-header" value="/WEB-INF/tiles/default-header.jsp" />
        <put-attribute name="default-footer" value="/WEB-INF/tiles/default-footer.jsp" />
        <put-attribute name="customer-sidebar" value="/WEB-INF/tiles/default-sidebar.jsp"/>
    </definition>

    <definition name="/*.tiles" extends="layouts-tiles">
        <put-attribute name="content" value="/WEB-INF/views/{1}.jsp" />
    </definition>

    <definition name="/*/*.tiles" extends="layouts-tiles">
        <put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp" />
    </definition>
    
</tiles-definitions>
